extends layout

block content
    h1=title

    form(method='POST' action='')
        div.form-group
            label(for='username') Username:
            input#username.form-control(type='text' placeholder='', name='username' required='true' value=(undefined===username ? '' : user.username) )
        div.form-group
            label(for='password') Password:
            input#password.form-control(type='password' placeholder='' name='password' required='true' value=(undefined===password ? '' : user.password) )
        button.btn.btn-primary(type='submit') Log In
    
    if errors
        ul
            for error in errors
                li!=error.msg